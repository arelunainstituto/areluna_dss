{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.ts",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/alerts",
            "schedule": "*/15 * * * *"
        },
        {
            "path": "/api/cron/daily-snapshots",
            "schedule": "55 23 * * *"
        },
        {
            "path": "/api/cron/weekly-metrics",
            "schedule": "59 23 * * 0"
        }
    ]
}